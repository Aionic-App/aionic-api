{
	"extends": ["tslint-config-airbnb", "tslint-config-prettier"],
	"rules": {
		"variable-name": [true, "allow-leading-underscore"],
		"no-console": false,
		"no-submodule-imports": [
			true,
			"source-map-support",
			"module-alias",
			"@config",
			"@global",
			"@milestone",
			"@services",
			"@util"
		],
		"no-implicit-dependencies": [true, "dev", ["@config", "@global", "@milestone", "@services", "@util"]],
		"no-boolean-literal-compare": false
	}
}
